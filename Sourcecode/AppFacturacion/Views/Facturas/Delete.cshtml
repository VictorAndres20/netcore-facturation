@model AppFacturacion.Models.Facturas

@{
    ViewData["Title"] = "Eliminar";
}
<div class="row">
    <div class="col-sm-6 text-center">
        <h3>¿Estás seguro que deseas eliminarla?</h3>
    </div>
    <div class="col-sm-6 text-center">
        <p>
            <a asp-action="Index" class="btn btn-info"><i class="fas fa-arrow-circle-left"></i> Ir a facturas</a>
        </p>
    </div>
</div>
<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row fs-12">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroFactura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipodePago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipodePago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentoCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DocumentoCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descuento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descuento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IVA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IVA)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalDescuento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalDescuento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalImpuesto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalImpuesto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idFactura" />
        <button class="btn btn-danger" type="submit"><i class="far fa-trash-alt"></i> Eliminar</button>
        <a asp-action="Index" class="btn btn-info"><i class="fas fa-arrow-circle-left"></i> Ir a facturas</a>
    </form>
</div>
